<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/loginWrapper"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >

        <LinearLayout
            android:id="@+id/logoWrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/loginLayout"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/loginLayout"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/loginLogo"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:src="@drawable/logo_ins" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/loginLayout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/logoWrapper"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" >

            <EditText
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bkg_login_txt_usuario"
                android:hint="@string/hint_username"
                android:paddingLeft="10dp"
                android:singleLine="true" >

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/txtUsername"
                android:background="@drawable/bkg_login_txt_password"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:singleLine="true" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/txtPassword"
                android:layout_marginTop="5dp"
                android:background="@drawable/bkg_login_btn_submit"
                android:text="@string/text_submit"
                android:textAlignment="center"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnLogin"
                android:layout_marginTop="5dp"
                android:autoLink="web"
                android:gravity="center"
                android:linksClickable="true"
                android:text="@string/text_register"
                android:textColorLink="@color/login_register_color" />
        </RelativeLayout>
    </RelativeLayout>

    <include
        android:id="@+id/commonMenuTopWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/warning_message_layout"
        android:visibility="gone" />

</RelativeLayout>