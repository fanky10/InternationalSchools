<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aenimastudio.nis"
    android:versionCode="3"
    android:versionName="1.8-RC2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <!-- permission list -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- launch activity -->
        <activity
            android:name="com.aenimastudio.nis.activities.SplashNISActivity"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.aenimastudio.nis.activities.LoginActivity" />
        <activity
            android:name="com.aenimastudio.nis.activities.NewsBrowserActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.aenimastudio.nis.activities.FoodMenuBrowserActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.aenimastudio.nis.activities.SimpleBrowserActivity"
            android:configChanges="orientation|screenSize" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
                <action android:name="android.intent.action.VIEW" />
                <data android:scheme="com.aenimastudio.nis" />
                <category android:name="android.intent.category.BROWSABLE" /> 
            </intent-filter>
        </activity>
    </application>

</manifest>